pipeline {
    agent none
    stages {
        stage('Run Hello World') {
            agent {
                docker { image 'python:3.9-slim' }
            }
            steps {
                // Optionally create the file dynamically
                script {
                    writeFile file: 'helloworld.py', text: 'print("Hello, World!")'
                }
                // Execute the Python script
                sh 'python3 helloworld.py'
            }
        }
    }
}
